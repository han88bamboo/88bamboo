{% comment %}
  {% if section.settings['custom-code'] != null and section.settings['custom-code'] != '' %}
    {{ section.settings['custom-code'] }}
  {% else %}
    <div class="editable-container">
      <div class="d-flex justify-content-between new--header">
        <h2>{{ section.settings['text-box'] }}</h2>
      </div>
      <div class="editable-container--image">
        <a href="{{ section.settings.custom-link }}">
          <img
            src="{{ section.settings.custom-image | img_url: 'master' }}"
            loading="lazy"
            decoding="async"
          >
        </a>
      </div>
    </div>
  {% endif %}
{% endcomment %}

{%- if section.settings['display-ad'] -%}
  <div class="ad-container">
    {% if section.settings['custom-code'] != null and section.settings['custom-code'] != '' %}
      {{ section.settings['custom-code'] }}
    {% else %}      
      <div>
        <a href="{{ section.settings.custom-link }}">
          <img
            src="{{ section.settings.custom-image | img_url: 'master' }}"
            loading="lazy"
            decoding="async"
          >
        </a>
      </div>
      <div>
        <p>
          <strong>
          <a href="{{ section.settings['text-link'] }}" class="hoverable-text" > {{ section.settings['text-box'] }} </a>   <style>  .hoverable-text:hover::after {    content: "{{ section.settings['hover-text'] }}";    position: absolute;    background-color: #fff;    border: 1px solid #000;    padding: 10px;    z-index: 9999;  }</style>
          </strong>
        </p>
      </div>
    {% endif %}
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Advertising area",
  "class": "advert-area",
  "settings": [
    {
      "id": "display-ad",
      "type": "checkbox",
      "label": "display ad?",
      "default": false
    },
    {
      "id": "text-box",
      "type": "text",
      "label": "Potential Sponsor's CTA",
      "default": "Title"
    },
    {
      "id": "text-link",
      "type": "url",
      "label": "Link for the text"
    },
    {
      "id": "hover-text",
      "type": "text",
      "label": "Hoverable text",
      "default": "Reach out to us"
    },
    {
      "id": "custom-link",
      "type": "url",
      "label": "Link to ad"
    },
    {
      "id":"custom-image",
      "type":"image_picker",
      "label":"Image"
    },
    {
      "id": "custom-code",
      "type": "textarea",
      "label": "Custom code"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .ad-container {
    display : none;
    margin : 0px 0px;
  }

  @media only screen and (min-width: 600px) {
    /* For tablets: */
    .ad-container {
      display : block;
      margin: 0px 0px 8px 0px;
    }
  }

  @media only screen and (min-width: 768px) {
    /* For desktop: */
    .ad-container {
      display : block;
      margin: 0px 0px 8px 0px;
    }
  }
{% endstylesheet %}

